{
  "name": "word-export-module",
  "version": "1.0.0",
  "description": "A Node.js module for exporting Word files from JSON data with multilingual support and font styling.",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/**/*",
    "config/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r config dist/ && cp -r templates dist/ && cp -r uploads dist/",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "type-check": "tsc --noEmit",
    "demo": "npm run build && node dist/examples/demo.js",
    "demo:export": "npm run build && node dist/examples/export-demo.js",
    "example": "npm run build && node dist/examples/example.js",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "word",
    "export",
    "json",
    "docx",
    "template",
    "multilingual",
    "persian",
    "rtl",
    "font-styling",
    "document-generation",
    "nodejs",
    "typescript",
    "module",
    "local-module"
  ],
  "dependencies": {
    "docx": "^7.0.0",
    "docxtemplater": "^3.65.2",
    "jszip": "^3.10.1",
    "lodash": "^4.17.21",
    "pizzip": "^3.2.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.0.0",
    "eslint": "^7.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
