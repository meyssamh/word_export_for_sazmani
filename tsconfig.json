{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "examples/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "examples/main-project-example/**"
  ]
}